{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true, // 是否默认禁用 any
    "baseUrl": ".", // 工作根目录
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "types": [
      "webpack-env",
      "@dcloudio/types",
      "jest",
      "uni-app",
      "html5plus",
      "miniprogram-api-typings",
      "mini-types",
    ],
    "typeRoots": [
      "./node_modules/vue/types",
      "./src/types",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@pages/*": ["src/pages/*"],
      "@const/*": ["src/const/*"],
    },
    "lib": [
      "es6",
      "esnext",
      "dom",
      "dom.iterable",
      "ScriptHost",
    ],
  },
  "include": [
    "./src/**/*",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "patient-files_static",
    "dist/**/*",
    "babel.config.js",
    "/src/components/jyf-parser/**/*"
  ]
}

